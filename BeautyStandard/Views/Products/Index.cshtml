@model IEnumerable<BeautyStandard.Models.Product>

@{
    ViewData["Title"] = "Товары";
}

<h1>Товары</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Добавить новый товар
    </a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Category)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.Stock)</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="Подробнее">
                            <i class="bi bi-info-circle"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Редактировать">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Удалить">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
        }
    </tbody>
</table>